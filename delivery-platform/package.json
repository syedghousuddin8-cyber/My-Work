{
  "name": "delivery-platform",
  "version": "1.0.0",
  "description": "Production-ready multi-vendor multi-category delivery platform",
  "private": true,
  "workspaces": [
    "backend/services/*",
    "backend/api-gateway",
    "backend/shared",
    "mobile/*",
    "web/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:services\" \"npm run dev:gateway\" \"npm run dev:admin\"",
    "dev:services": "lerna run dev --scope='@delivery/services-*' --parallel",
    "dev:gateway": "cd backend/api-gateway && npm run dev",
    "dev:admin": "cd web/admin-panel && npm run dev",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:apply": "kubectl apply -f infrastructure/kubernetes/",
    "db:migrate": "cd database && npm run migrate",
    "db:seed": "cd database && npm run seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "lerna": "^8.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
