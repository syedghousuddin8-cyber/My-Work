{
  "dashboard": {
    "title": "Service Metrics - Detailed",
    "tags": ["delivery-platform", "services"],
    "timezone": "browser",
    "refresh": "10s",
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, job)",
          "current": {"text": "All", "value": "$__all"},
          "multi": false,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"$service\"}[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Response Time Percentiles",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"$service\"}[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"$service\"}[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"$service\"}[5m]))",
            "legendFormat": "p99"
          }
        ]
      },
      {
        "id": 3,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"$service\"}[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ]
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"$service\"}",
            "legendFormat": "Memory"
          }
        ],
        "yaxes": [
          {"format": "bytes"}
        ]
      },
      {
        "id": 5,
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"$service\", status=~\"2..\"}[5m])",
            "legendFormat": "2xx Success"
          },
          {
            "expr": "rate(http_requests_total{job=\"$service\", status=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Error"
          },
          {
            "expr": "rate(http_requests_total{job=\"$service\", status=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Error"
          }
        ]
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "nodejs_active_handles{job=\"$service\"}",
            "legendFormat": "Active Handles"
          },
          {
            "expr": "nodejs_active_requests{job=\"$service\"}",
            "legendFormat": "Active Requests"
          }
        ]
      }
    ]
  }
}
